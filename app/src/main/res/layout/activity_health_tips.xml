<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Top Bar -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#263A99"
        android:padding="16dp">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/back"
            android:layout_alignParentStart="true"
            android:contentDescription="Back"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/topTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hygiene and Safety Guides"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <!-- Main Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="56dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Card Image -->
            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="16dp"
                android:scaleType="centerCrop"
                android:src="@drawable/_875"
                android:contentDescription="Waste safety precautions"
                android:background="@drawable/image_border" />

            <!-- Title -->
            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Essential Hygiene and Safety Practices for Waste Exposure"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="8dp" />

            <!-- Author Row -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/circle_bg"
                    android:padding="2dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="by Public Health Team"
                    android:textSize="14sp"
                    android:textColor="#666666" />
            </LinearLayout>

            <!-- Body Text -->
            <TextView
                android:id="@+id/body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Proper hygiene and safety measures are crucial when handling waste to prevent infections, injuries, and environmental contamination. Follow these guidelines to protect yourself and others."
                android:textSize="14sp"
                android:textColor="#888888"
                android:lineSpacingExtra="4dp" />

            <!-- Section Headers -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Personal Protective Equipment (PPE)"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Always wear thick gloves when handling waste\n• Use face masks (N95 recommended) for respiratory protection\n• Wear waterproof aprons or coveralls\n• Use safety goggles when there's risk of splashing\n• Wear closed-toe, non-slip footwear"
                android:textSize="14sp"
                android:textColor="#888888"
                android:lineSpacingExtra="4dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Safe Handling Procedures"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Never compress waste with your hands or body\n• Use proper tools (tongs, brooms, shovels)\n• Separate sharp objects carefully\n• Avoid touching your face while handling waste\n• Wash hands immediately after removing gloves\n• Follow color-coded waste segregation systems"
                android:textSize="14sp"
                android:textColor="#888888"
                android:lineSpacingExtra="4dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="First Aid for Waste Exposure"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• For cuts/punctures: Wash with soap and running water for 15 minutes\n• For eye exposure: Rinse with clean water for 15 minutes\n• For chemical exposure: Follow MSDS guidelines\n• Report all exposures to supervisor immediately\n• Seek medical attention for significant exposures"
                android:textSize="14sp"
                android:textColor="#888888"
                android:lineSpacingExtra="4dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Waste Storage and Disposal"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Store waste in leak-proof, durable containers\n• Keep waste containers covered at all times\n• Label all containers clearly\n• Don't overfill containers (max 3/4 full)\n• Dispose hazardous waste separately\n• Follow local regulations for disposal methods"
                android:textSize="14sp"
                android:textColor="#888888"
                android:lineSpacingExtra="4dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cleaning and Decontamination"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Clean and disinfect waste containers regularly\n• Use EPA-approved disinfectants\n• Clean tools after each use\n• Establish handwashing stations near waste areas\n• Shower after handling hazardous waste"
                android:textSize="14sp"
                android:textColor="#888888"
                android:lineSpacingExtra="4dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Emergency Procedures"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Know location of emergency eyewash stations\n• Have spill kits available for hazardous waste\n• Post emergency numbers visibly\n• Conduct regular safety drills\n• Report unsafe conditions immediately"
                android:textSize="14sp"
                android:textColor="#888888"
                android:lineSpacingExtra="4dp"/>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="bottom"
        android:background="@color/white"
        app:menu="@menu/health_tips_nav_menu"
        app:itemIconTint="@color/nav_item_color"
        app:itemTextColor="@color/nav_item_color" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>